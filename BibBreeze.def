\ProvidesFile{BibBreeze.def}

\DeclareDriverSourcemap[datatype=bibtex]
{
  \map
  {%
    %Various names that a bib entry may have for publication number of a thesis
    \step[fieldsource=pubnum,  match=\regexp{^\d{8}},   fieldtarget=publicationnumber]
    \step[fieldsource=pubno,  match=\regexp{^\d{8}},   fieldtarget=publicationnumber]
    \step[fieldsource=publicationnum,  match=\regexp{^\d{8}},   fieldtarget=publicationnumber]
    \step[fieldsource=pubnumber,  match=\regexp{^\d{8}},   fieldtarget=publicationnumber]
    \step[fieldsource=publicationno,  match=\regexp{^\d{8}},   fieldtarget=publicationnumber]
    %Various names that a bib entry may have for resource name of a thesis
    \step[fieldsource=resource,   fieldtarget=bibsource]
    \step[fieldsource=source,   fieldtarget=bibsource]
    \step[fieldsource=database,   fieldtarget=bibsource]% The field database is a field for theses published only in a database (not online). However because it maintains the same printing order as the source of an online thesis, it can be interepreted as bibsource.
  }%
}%